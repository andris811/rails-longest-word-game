
<div class="container">
  <h1>New Games</h1>
  <ul>
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
  </ul>
  <form action="/score" method="post" data-turbo="false">
    <input type="text" name="letters" value="<%= @letters %>" style="display: none;">
    <p class="form-text">What is the longest word you can find?</p>
    <div class="input">
      <input type="text"
        name="word"
        value="<%= params[:word] %>"
        class="form-control"
      >
      <input type="submit" value="Play" class="btn btn-light">
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
